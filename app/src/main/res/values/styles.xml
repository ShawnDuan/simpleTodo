<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customize_Primary</item>
        <item name="colorPrimaryDark">@color/customize_Dark</item>
        <item name="colorAccent">@color/customize_Light</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="editTextStyle">@style/MyFormEditTextStyle</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/customize_Primary</item>
        <item name="colorPrimaryDark">@color/customize_Dark</item>
        <item name="android:textColorHighlight">@color/customize_Verylight</item>
        <item name="colorAccent">@color/customize_Highlight</item>
        <item name="colorControlNormal">@color/customize_Dark</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/customize_Primary</item>
    </style>

    <style name="MyToolbarPopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white_50_percent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyFormTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyFormEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_rectangle</item>
    </style>

    <style name="MyFormUneditableEditTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_uneditable_rectangle</item>
    </style>



</resources>
